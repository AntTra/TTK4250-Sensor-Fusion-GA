{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: run homework",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "internalConsole"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole"
        },
        {
            "name": "Python: create handin zip",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/create_handin.py",
            "console": "internalConsole"
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "test",
            "console": "internalConsole",
            "justMyCode": true,
            "env": {
                "_PYTEST_RAISE": "1"
            }
        }
    ]
}